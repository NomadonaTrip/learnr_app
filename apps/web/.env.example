# ============================================
# LearnR Frontend Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# Backend API Configuration (REQUIRED)
# ============================================
# Backend API URL
# Development: http://localhost:8000
# Staging: https://api-staging.learnr.com
# Production: https://api.learnr.com
VITE_API_URL=http://localhost:8000

# ============================================
# Analytics Configuration (OPTIONAL)
# ============================================
# PostHog API key from: https://posthog.com/ → Project Settings
# Leave empty to disable analytics in development
VITE_POSTHOG_KEY=

# PostHog host (usually app.posthog.com for cloud)
VITE_POSTHOG_HOST=https://app.posthog.com

# ============================================
# Application Configuration
# ============================================
# Environment: development, staging, production
VITE_ENVIRONMENT=development

# App version (from package.json)
VITE_APP_VERSION=1.0.0

# ============================================
# Feature Flags (for development)
# ============================================
# Enable debug mode (shows dev tools, verbose logging)
VITE_DEBUG=true

# Enable mock API responses (for frontend development without backend)
VITE_USE_MOCK_API=false

# ============================================
# Sentry Configuration (OPTIONAL)
# ============================================
# Sentry DSN for frontend error tracking
# Get from: https://sentry.io/ → Project Settings
# Leave empty to disable error tracking in development
VITE_SENTRY_DSN=

# Sentry environment
VITE_SENTRY_ENVIRONMENT=development

# ============================================
# PWA Configuration
# ============================================
# Enable service worker (for PWA offline support)
VITE_ENABLE_SERVICE_WORKER=false

# ============================================
# API Timeout Configuration
# ============================================
# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# ============================================
# Build Configuration
# ============================================
# Source maps (enable for debugging, disable for production)
VITE_GENERATE_SOURCEMAP=true
